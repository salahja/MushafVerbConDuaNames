<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/space_3"
    android:layout_marginRight="@dimen/space_3"
    android:orientation="horizontal"

    android:paddingLeft="@dimen/space_2"
    android:paddingRight="@dimen/space_2">

    <TextView
        android:id="@+id/tvAyahNumber"
        app:srcCompat="@drawable/baseline_menu_open_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"

        android:gravity="left|center_vertical|center_horizontal|center|start"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_2"
        android:paddingLeft="16dp" />

    <TextView
        android:id="@+id/headers"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:id="@+id/ivActionOverflow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="@dimen/space_1"
        android:paddingEnd="@dimen/space_1"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp"
         />
</LinearLayout>
