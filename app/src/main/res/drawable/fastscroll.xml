<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:tint="?attr/colorControlActivated" android:shape="rectangle">
                    <solid android:color="?attr/colorPrimary"/>
                    <size android:height="48dp" android:width="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tint="?attr/colorControlNormal" android:shape="rectangle">
                    <solid android:color="@android:color/darker_gray"/>
                    <size android:height="48dp" android:width="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
